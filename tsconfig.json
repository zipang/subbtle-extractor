{
	"compilerOptions": {
		"target": "ESNext",
		"module": "Preserve",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["./src/utils/*"],
			"@components/*": ["./src/components/*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
